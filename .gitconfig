[user]
    name = proft
    email = proftua@gmail.com

[alias]
    ci = commit
    st = status
    uns = reset HEAD
    co = checkout    
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    outgoing = log origin/master..HEAD
    incoming = "!git fetch $1; git log HEAD..$1/master"   
    graph = log --graph --decorate --oneline --pretty=format:"%h%x20%Cgreen%d%x20%Cred%an%x20%Cblue%ad%x20%Creset%s" --all --full-history --date=short

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[push]
	default = simple

[merge]
  # Always show a diffstat at the end of a merge
  stat = true
