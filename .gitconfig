[user]
    name = proft
    email = proftua@gmail.com

[alias]
    ci = commit
    st = status
    uns = reset HEAD
    co = checkout    
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

